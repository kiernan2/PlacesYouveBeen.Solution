@using PlacesYouveBeen.Models;

<h1>This is a header</h1>

@if (Model.Count == 0)
{
  <p>There's nothing here</p>
}
<ul>
  @foreach (Place place in Model)
  {
    <li><a href="/places/@place">@place.CityName</a></li>
  }
</ul>
<a href="/places/new">Add a new place.</a>

<form action="/places/delete" method="post">
  <button type="submit" name="button">Delete All</button>
</form>
